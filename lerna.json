{
  "packages": [
    "packages/*"
  ],
  "version": "0.8.2",
  "useWorkspaces": true,
  "npmClient": "yarn",
  "command": {
    "publish": {
      "ignoreChanges": [
        "**/LICENSE",
        "**/*.md",
        "**/*.yml",
        "**/*.test.{js,jsx,ts,tsx}",
        "**/__mocks__/**",
        "**/lab/**"
      ]
    },
    "version": {
      "message": "chore(release): publish %s"
    }
  }
}
