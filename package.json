{
  "name": "firebolt",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "setup": "yarn && yarn build:libs",
    "clean": "lerna clean",
    "bootstrap": "lerna bootstrap --use-workspaces",
    "start": "lerna run dev --scope @iq-firebolt/lab --stream",
    "test:all": "lerna exec --scope @iq-firebolt/validators --scope @iq-firebolt/client-core  --scope @iq-firebolt/client yarn test",
    "test:all:coverage": "lerna exec --scope @iq-firebolt/validators --scope @iq-firebolt/client-core  --scope @iq-firebolt/client yarn test:coverage",
    "test:validators": "cd packages/validators && yarn test",
    "test:client-core": "cd packages/client-core && yarn test",
    "test:client": "cd packages/client && yarn test",
    "build:validators": "cd packages/validators && yarn build",
    "build:libs": "lerna run build --scope @iq-firebolt/client-core --scope @iq-firebolt/validators --scope @iq-firebolt/client",
    "versionup": "lerna version  --no-git-tag-version --force-publish",
    "publish:libs": "yarn lerna publish from-package --yes --no-verify-access",
    "publish:canary": "lerna publish --canary --preid next --dist-tag next --force-publish='*' --no-push --no-git-tag-version --yes --no-verify-access"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.2",
    "@types/faker": "^5.5.8",
    "@types/jest": "^27.0.2",
    "eslint": "^7.32.0",
    "eslint-plugin-jest": "^24.5.0",
    "jest": "^27.2.4",
    "jest-transform-stub": "^2.0.0",
    "lerna": "^4.0.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.3"
  }
}
