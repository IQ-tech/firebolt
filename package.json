{
  "name": "firebolt",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "lerna run start",
    "test:all": "lerna run test",
    "test:validators": "cd packages/validators && yarn test",
    "build:validators": "cd packages/validators && yarn build",
    "build:libs": "lerna run build --scope @iq-firebolt/validators --scope @iq-firebolt/client",
    "bootstrap": "lerna bootstrap --use-workspaces",
    "versionup": "lerna version  --no-git-tag-version",
    "publish:libs": "yarn lerna publish from-package --yes",
    "clean": "lerna clean"
  },
  "devDependencies": {
    "@types/faker": "^5.5.8",
    "@types/jest": "^27.0.2",
    "eslint": "^7.32.0",
    "eslint-plugin-jest": "^24.5.0",
    "jest": "^27.2.4",
    "lerna": "^4.0.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.3"
  }
}
