.image-preview {
  background-color gray-100
  z-index 140
  position fixed
  top 0
  left 0
  height 100vh
  width 100vw
  display flex
  align-items center
  justify-content center

  img {
    display: block;
    height: 100%;
    margin: 0 auto;
  }

  &.-environment{
    +aboveMedium(){
      transform: scaleX(-1);
    }
    
  }
}

.app-camera
  position fixed
  top 0
  left 0
  width 100vw
  bottom 0
  z-index 1500

  &__video-holder
    display flex
    align-items center
    justify-content center
    background alpha(gray-100, 0.8)
    width 100%
    height 100%
    position relative
    z-index 140

    &.-show-mask
      &:before
        display block
        position absolute
        z-index 100
        content ''
        width 100%
        height 100%

      &.-user
        &:before
          background url('/produto/images/camera-mask.svg') no-repeat center
          background-size cover

        &.-local:before
          background url('/images/camera-mask.svg') no-repeat center
          background-size cover

      &.-RG
        &:before
          background url('/produto/images/doc-mask-mobile-vertical.svg') no-repeat center
          background-size cover
          
        &.-local:before
          background url('/images/doc-mask-mobile-vertical.svg') no-repeat center
          background-size cover

        +aboveMedium()
          &:before
            background url('/produto/images/doc-mask-vertical.svg') no-repeat center
            background-size cover
            
          &.-local:before
            background url('/images/doc-mask-vertical.svg') no-repeat center
            background-size cover


      &.-CNH
        &:before
          background url('/produto/images/doc-mask-mobile.svg') no-repeat center
          background-size cover
          
        &.-local:before
          background url('/images/doc-mask-mobile.svg') no-repeat center
          background-size cover

        +aboveMedium()
          &:before
            background url('/produto/images/doc-mask.svg') no-repeat center
            background-size cover
            
          &.-local:before
            background url('/images/doc-mask.svg') no-repeat center
            background-size cover

  &__video
    height 100%
    position absolute
    top 0
    z-index 1
    left 50%

    &.-user
      transform translateX(-50%) scaleX(-1)

     &.-environment
      transform translateX(-50%) scaleX(1)
      +aboveMedium()
        transform translateX(-50%) scaleX(-1)
      


  &__actions
    z-index 150
    position absolute
    bottom 0
    width 100%
    left 0
    padding 24px
    display flex
    flex-direction column
    align-items center
    justify-content center

  &__warning
    background rgba(255, 255, 255, 0.7)
    margin-bottom 15px
    border-radius 16px
    padding 8px
    text-align center
    font-size 14px
    color black

    +aboveMedium()
      margin-bottom 60px
      