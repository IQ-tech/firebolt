.iq-centralized-modal.modal-one-button {
  .iq-centralized-modal__content {
    +aboveMedium() {
      display: flex;
      flex-flow: column;
      min-height: 256px;
      max-height: fit-content;
      bottom: 0;
      left: 0;
      margin: auto;
      border-radius: 16px;
    }

    .iq-centralized-modal__button {
      position: absolute;
      top: 16px;
      right: 16px;

      button {
        width: 24px;
        height: 24px;
        border-radius: 50%;
        background-color: gray-20;
      }

      .iq-icon {
        width: 16px;
        height: 16px;
      }

      svg {
        width: 12px;
        color: #969696;
      }
    }
  }

  .modal-one-button {
    &__content {
      display: flex;
      flex: 1;
      flex-flow: column;
      justify-content: space-between;
    }

    &__button {
      +aboveMedium() {
        padding-bottom: 24px;
      }

      &:after {
        +aboveMedium() {
          position: absolute;
          display: block;
          width: calc(100% + 64px);
          height: 1px;
          bottom: 0;
          left: -32px;
          content: '';
          background-color: gray-40;
        }
      }
    }

    &__content-top {
      +aboveMedium() {
        margin-bottom: 24px;
      }
    }

    &__title {
      margin-bottom: 0;
      margin-top: 16px;
      color: blueberry-80;
      font-family: 'Baloo Chettan 2', sans-serif;
      font-size: 20px;
      line-height: 28px;
      font-weight: 600;
      text-align: center;

      +aboveMedium() {
        margin-top: 8px;
      }
    }

    &__text {
      margin-bottom: 0;
      margin-top: 16px;
      color: gray-60;
      font-family 'Open Sans', sans-serif
      font-size: 12px;
      line-height: 20px;
      font-weight: 400;
      text-align: center;

      +aboveMedium() {
        margin-top: 8px;
        font-size: 16px;
        line-height: 24px;
        text-align: center;
      }
    }

    &__list {
      color: gray-60;
      font-size: 12px;
      line-height: 20px;
      font-weight: 400;
      padding-left: 40px;
      margin-top: 12px;

      & > li {
        &:not(:first-of-type) {
          margin-top: 6px;
        }
      }
    }

    &__bottom { 
      display: flex;
      justify-content: space-between;
      margin-top: 24px;

      +aboveMedium() {
        position: relative;
      }

      .iq-btn {
        display: flex;
        width: 100%;
        justify-content: center;

        &--type-primary:not(.iq-btn--disabled) {
          background-color: blueberry-60;
        }
      }
    }
  }
}
