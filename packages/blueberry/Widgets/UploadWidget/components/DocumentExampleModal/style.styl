.iq-centralized-modal.modal-one-button{
  .document-ex__modal{
    &-image{
      display: block;
      margin: 16px auto 0px;
      width: 80%
    }
    &-list{
      list-style-position: inside;
      margin-top: 16px;
      &-item{
        font-size: 14px;
        line-height: 22px;
        color: $bb-gray-60;
        padding-bottom: 8px;
        +aboveMedium(){
          text-align: center;
          padding: 0 10px 8px;
        }
      }
    }
  }

 +aboveMedium(){
    .modal-one-button__bottom{
      margin-top: 0px;
    }
  } 
}